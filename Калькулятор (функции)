#include <iostream>
using namespace std;



double calc(double num1, double num2, char op) {


	if (op == '/' && num2 == 0) {
		return 0;
	}



	switch (op)
	{
	case '+':
		return num1 + num2;

	case '-':
		return num1 - num2;
	case '*':
		return num1 * num2;
	case '/':
		return num1 / num2;
	case '^':
		return num1 * num1 * num2 * num2;

	case 's':
		return num1 + num2 - 50;
	case 'c':
		return num1 + num2 + 50;
	case '#':
		return num1 * num2 / 10;

	default:
		cout << "[!] Такого действия нет, введите другое";
		break;
	}






}

int main() {
	setlocale(0, "");
	cout << "[+] Первое число: ";
	int a;
	cin >> a;

	cout << "[+] Второе число: ";
	int b;
	cin >> b;

	cout << "[+] Действие: ";
	char op;
	cin >> op;

	cout << "[+] Результат: " << calc(a, b, op) << endl;

	int _; cin >> _;
}
